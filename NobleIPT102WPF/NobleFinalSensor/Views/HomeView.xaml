<UserControl x:Class="NobleFinalSensor.Views.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="#F5F5F5">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Welcome Section -->
        <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Border Background="White" Padding="60,40" CornerRadius="10">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="20" ShadowDepth="3" Opacity="0.3"/>
                </Border.Effect>
                <StackPanel>
                    <TextBlock Text="ðŸ " 
                              FontSize="80" 
                              HorizontalAlignment="Center"
                              Margin="0,0,0,20"/>
                    
                    <TextBlock Text="Welcome to" 
                              FontSize="24" 
                              Foreground="#666"
                              HorizontalAlignment="Center"/>
                    
                    <TextBlock Text="Sensor Management System" 
                              FontSize="36" 
                              FontWeight="Bold" 
                              Foreground="#2196F3"
                              HorizontalAlignment="Center"
                              Margin="0,10,0,30"/>
                    
                    <TextBlock Text="Manage and monitor your sensors efficiently" 
                              FontSize="16" 
                              Foreground="#999"
                              HorizontalAlignment="Center"
                              Margin="0,0,0,30"/>
                    
                    <Button Content="View All Sensors"
                           Command="{Binding ViewAllSensorsCommand}"
                           Background="#2196F3"
                           Foreground="White"
                           Padding="30,15"
                           FontSize="16"
                           FontWeight="SemiBold"
                           BorderThickness="0"
                           Cursor="Hand"
                           HorizontalAlignment="Center">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                   CornerRadius="6"
                                                   Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#1976D2"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Border>
        </StackPanel>

        <!-- Quick Info Cards -->
        <StackPanel Grid.Row="2" 
                   Orientation="Horizontal" 
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top"
                   Margin="0,40,0,0">
            
            <Border Background="White" 
                   Padding="30,20" 
                   Margin="10"
                   CornerRadius="8"
                   Width="200">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.2"/>
                </Border.Effect>
                <StackPanel>
                    <TextBlock Text="ðŸ“Š" FontSize="32" HorizontalAlignment="Center"/>
                    <TextBlock Text="Monitor" 
                              FontSize="18" 
                              FontWeight="SemiBold"
                              HorizontalAlignment="Center"
                              Margin="0,10,0,5"/>
                    <TextBlock Text="Track sensor data" 
                              FontSize="12" 
                              Foreground="#666"
                              HorizontalAlignment="Center"
                              TextWrapping="Wrap"
                              TextAlignment="Center"/>
                </StackPanel>
            </Border>

            <Border Background="White" 
                   Padding="30,20" 
                   Margin="10"
                   CornerRadius="8"
                   Width="200">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.2"/>
                </Border.Effect>
                <StackPanel>
                    <TextBlock Text="âš™ï¸" FontSize="32" HorizontalAlignment="Center"/>
                    <TextBlock Text="Manage" 
                              FontSize="18" 
                              FontWeight="SemiBold"
                              HorizontalAlignment="Center"
                              Margin="0,10,0,5"/>
                    <TextBlock Text="Add, edit, delete sensors" 
                              FontSize="12" 
                              Foreground="#666"
                              HorizontalAlignment="Center"
                              TextWrapping="Wrap"
                              TextAlignment="Center"/>
                </StackPanel>
            </Border>

            <Border Background="White" 
                   Padding="30,20" 
                   Margin="10"
                   CornerRadius="8"
                   Width="200">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.2"/>
                </Border.Effect>
                <StackPanel>
                    <TextBlock Text="ðŸ”" FontSize="32" HorizontalAlignment="Center"/>
                    <TextBlock Text="Search" 
                              FontSize="18" 
                              FontWeight="SemiBold"
                              HorizontalAlignment="Center"
                              Margin="0,10,0,5"/>
                    <TextBlock Text="Find sensors quickly" 
                              FontSize="12" 
                              Foreground="#666"
                              HorizontalAlignment="Center"
                              TextWrapping="Wrap"
                              TextAlignment="Center"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
</UserControl>
